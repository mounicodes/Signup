<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="com.mounica.pheramor.models.User" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="116dp"
            android:layout_marginTop="4dp"
            android:src="@{user.profilePicture}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_name_info"
            style="@style/ReviewTextViewItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/image_dp" />

        <TextView
            android:id="@+id/text_name"
            style="@style/ReviewTextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.firstName}"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/image_dp" />

        <TextView
            android:id="@+id/text_gender_info"
            style="@style/ReviewTextViewItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender: "
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_name_info" />

        <TextView
            android:id="@+id/text_gender"
            style="@style/ReviewTextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.gender}"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_name" />

        <TextView
            android:id="@+id/text_bday_info"
            style="@style/ReviewTextViewItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth: "
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_gender_info" />

        <TextView
            android:id="@+id/text_bday"
            style="@style/ReviewTextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.dob}"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_gender" />

        <TextView
            android:id="@+id/text_height_info"
            style="@style/ReviewTextViewItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height (cms): "
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_bday_info" />

        <TextView
            android:id="@+id/text_height"
            style="@style/ReviewTextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.height}"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_bday" />

        <TextView
            android:id="@+id/text_zip_info"
            style="@style/ReviewTextViewItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZipCode: "
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_height_info" />

        <TextView
            android:id="@+id/text_zip"
            style="@style/ReviewTextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.zipCode}"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_height" />

        <TextView
            android:id="@+id/text_gender_interest_info"
            style="@style/ReviewTextViewItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interested in: "
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_zip_info" />

        <TextView
            android:id="@+id/text_gender_interest"
            style="@style/ReviewTextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.interestedGender}"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_zip" />

        <TextView
            android:id="@+id/text_age_interest_info"
            style="@style/ReviewTextViewItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age Groups: "
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_gender_interest_info" />

        <TextView
            android:id="@+id/text_age_interest"
            style="@style/ReviewTextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.fromAge}"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_gender_interest" />

        <TextView
            android:id="@+id/text_race_info"
            style="@style/ReviewTextViewItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Race: "
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_age_interest_info" />

        <TextView
            android:id="@+id/text_race"
            style="@style/ReviewTextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.race}"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_age_interest" />

        <TextView
            android:id="@+id/text_religion_info"
            style="@style/ReviewTextViewItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Religion: "
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_race_info" />

        <TextView
            android:id="@+id/text_religion"
            style="@style/ReviewTextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.religion}"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_race" />

        <TextView
            android:id="@+id/text_email_info"
            style="@style/ReviewTextViewItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_religion_info" />

        <TextView
            android:id="@+id/text_email"
            style="@style/ReviewTextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.email}"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/text_religion" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="123dp"
            app:layout_constraintTop_toBottomOf="@id/image_dp" />

        <Button
            android:id="@+id/button_continue"
            style="@style/ContinueButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_email" />

    </android.support.constraint.ConstraintLayout>
</layout>